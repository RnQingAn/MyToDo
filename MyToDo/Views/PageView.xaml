<UserControl x:Class="MyToDo.Views.PageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyToDo.Views" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             xmlns:ct="clr-namespace:MyToDo.Converters"
             d:DesignHeight="60" d:DesignWidth="800">
    <UserControl.Resources>
        <ct:BoolToVisibilityConveter x:Key="BoolToVisibilityConveter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
            <!-- 上一页按钮：应用Material Design扁平按钮样式，并绑定到ViewModel命令 -->
            <Button Style="{StaticResource MaterialDesignFlatButton}" Width="80" Height="50"
                    VerticalAlignment="Center" HorizontalAlignment="Center" 
                    Command="{Binding GoPageCommand}" CommandParameter="PreviousPage"
                    IsEnabled="{Binding HasPreviousPage}">
                <materialDesign:PackIcon Kind="ChevronLeft"  Width="50" Height="50"
                                         VerticalAlignment="Center" HorizontalAlignment="Center"
                                         />
            </Button>

            <!-- 页码和信息显示  当前页-->
            <TextBlock  Foreground="White"
               VerticalAlignment="Center" Text="{Binding CurrentPage}"
               Margin="0,0" 
               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
            <TextBlock  Foreground="White"
               VerticalAlignment="Center" Text="/"
               Margin="0,0" 
               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
            />
            <!-- 页码和信息显示 -->
            <TextBlock  Foreground="White"
               VerticalAlignment="Center" Text="{Binding TotalPage}"
               Margin="0,0" 
               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
             />

            <!-- 下一页按钮 -->
            <Button Style="{StaticResource MaterialDesignFlatButton}"  
                Command="{Binding GoPageCommand}"  
                CommandParameter="NextPage"  Width="80" Height="50"
                IsEnabled="{Binding HasNextPage}">
                <materialDesign:PackIcon Kind="ChevronRight"  VerticalAlignment="Center" HorizontalAlignment="Center"
                                         Width="50" Height="50" Margin="2,2"/>
            </Button>

            <!-- 可选：页码跳转输入框 -->
            <TextBox materialDesign:HintAssist.Hint="跳转至" Foreground="White"
             Width="60" Margin="10,0" FontSize="12" VerticalContentAlignment="Center"
             Height="30"  Text="{Binding GoPageIndex}" >
               
            </TextBox>

            <Button
                Height="50" Margin="10,0"
                Command="{Binding GoPageCommand}" 
                CommandParameter="GoPageIndex"
                materialDesign:ButtonAssist.CornerRadius="10"
                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                Style="{StaticResource MaterialDesignRaisedButton}"
                ToolTip="MaterialDesignRaisedButton with Round Corners">
                        <TextBlock
                  Text="跳转" />    
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
